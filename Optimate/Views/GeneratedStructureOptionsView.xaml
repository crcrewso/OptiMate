<UserControl x:Class="OptiMate.Views.GeneratedStructureOptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OptiMate"
             xmlns:behaviours="clr-namespace:OptiMate.Behaviours"
             xmlns:converters="clr-namespace:OptiMate.Converters"
             xmlns:e="http://schemas.microsoft.com/expression/2010/interactivity" 
             xmlns:extended="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300"
             d:MinHeight="190" d:MinWidth="450" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
    <UserControl.Resources>
        <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../XAMLDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:VisibilityConverter x:Key="VisibilityConverter"/>
            <converters:ConvertToCleanUpName x:Key="ConvertToCleanUpName"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border CornerRadius="4,4,4,4" Background="White" BorderBrush="CornflowerBlue" BorderThickness="1" MaxHeight="500" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="../Resources/settings_trans.png" RenderOptions.BitmapScalingMode="HighQuality"   Height="20" Width="20" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Grid.Column="1" Text="Structure Options - " Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="{Binding StructureId}" Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,0,0,0" VerticalAlignment="Center"/>
                <Button Grid.Column="3" Command="{Binding CloseWindowCommand}" Style="{StaticResource ButtonStyle_Small}" Height="25" Width="25">
                    <Image Source="../Resources/x.png"/>
                </Button>
            </Grid>
            <Border Grid.Row="1" Height="1" HorizontalAlignment="Stretch" Margin="10,5,10,5" Background="CornflowerBlue"/>
            <Grid Grid.Row="2" Margin="5,5,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0"  Text="Clear pre-existing contours before first instruction" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <CheckBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="10,5,0,5"  Style="{StaticResource CheckBoxStyle1}" IsChecked="{Binding ClearFirst, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" />
                <TextBlock Grid.Row="1" Grid.Column="0"  Text="Manage clean-up (deletion) after all structures are made" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <ComboBox Grid.Row="1" Grid.Column="1" Margin="10,5,0,5" Style="{StaticResource OptiStructureComboBoxStyle}" Template="{StaticResource OptiComboBoxControlTemplate}" ItemsSource="{Binding CleanupOptionsList}" SelectedItem="{Binding CleanupOption}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource ConvertToCleanUpName}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,5,0,5" Text="Choose whether set colour overwrites pre-existing" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <CheckBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Margin="10,5,0,5" Style="{StaticResource CheckBoxStyle1}" IsChecked="{Binding OverwriteColor, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,5,0,5"  Text="Set Colour " FontSize="12" VerticalAlignment="Center"/>
                <extended:ColorPicker Grid.Row="3" Grid.Column="1" Margin="10,5,0,5"  Name="ColorPicker" HorizontalAlignment="Left"  DropDownBackground="White" HeaderBackground="White" Foreground="LightSteelBlue" TabBackground="CornflowerBlue" TabForeground="White" 
                           SelectedColor="{Binding StructureColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="50" Height="25"/>
                <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,5,0,5" Text="Structure Code " FontSize="12" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="4" Grid.Column="1" Margin="10,5,0,5" VerticalAlignment="Center"  Style="{StaticResource OptiStructureComboBoxStyle}" Template="{StaticResource OptiComboBoxControlTemplate}" ItemsSource="{Binding StructureCodeDisplayNames, Mode=OneTime}" SelectedItem="{Binding StructureCodeDisplayName}">
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling"></VirtualizingStackPanel>
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>
            
            </Grid>
        </Grid>
    </Border>
</UserControl>
